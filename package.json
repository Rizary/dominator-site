{
    "name": "rust",
    "version": "0.1.0",
    "description": "frontend wasm in rust",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "webpack && webpack-dev-server --mode development",
        "build": "webpack",
        "watch:final": "run-p watch:tailwind watch:rollup",
        "build:final": "run-p build:tailwind build:rollup",
        "watch:tailwind": "postcss src-css/tailwind.css -o devhtml/css/main.css -w",
        "build:tailwind": "SET NODE_ENV=production postcss src-css/tailwind.css -o dist/css/main.css",
        "watch:rollup": "rollup -c rollup.dev.js --watch",
        "build:rollup": "rollup -c rollup.prod.js",
        "clean": "rimraf ./devhtml/js && rimraf ./devhtml/css",
        "amp-init": "amplify init"
    },
    "dependencies": {
        "@aws-amplify/cli": "latest",
        "aws-amplify": "latest"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.2",
        "@tailwindcss/typography": "^0.2.0",
        "@wasm-tool/rollup-plugin-rust": "^1.0.6",
        "@wasm-tool/wasm-pack-plugin": "^1.3.0",
        "autoprefixer": "^9.7.6",
        "copy-webpack-plugin": "^6.1.0",
        "cssnano": "^4.1.10",
        "lost": "^8.3.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^7.0.32",
        "postcss-clean": "^1.1.0",
        "postcss-cli": "^7.1.0",
        "postcss-import": "^12.0.1",
        "postcss-nested": "^4.2.1",
        "postcss-tuesday.css-data": "^1.0.2",
        "rimraf": "^3.0.2",
        "rollup": "^2.47.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-serve": "^1.1.0",
        "tailwindcss": "^1.4.0",
        "tailwindcss-font-inter": "^1.0.8",
        "tailwindcss-rtl": "^0.4.0",
        "wasm-pack": "^0.9.1",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5"
    }
}
