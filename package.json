{
    "name": "rust",
    "version": "0.1.0",
    "description": "frontend wasm in rust",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "webpack && webpack-dev-server --mode development",
        "build": "webpack",
        "watch:final": "run-p watch:tailwind watch:rollup",
        "build:final": "run-p build:tailwind build:rollup",
        "watch:tailwind": "postcss src-css/tailwind.css -o devhtml/css/main.css -w",
        "build:tailwind": "SET TAILWIND_MODE=build SET NODE_ENV=production postcss src-css/tailwind.css -o dist/css/main.css",
        "watch:rollup": "rollup -c rollup.dev.js --watch",
        "build:rollup": "rollup -c rollup.prod.js",
        "clean": "rimraf ./devhtml/js && rimraf ./devhtml/css",
        "amp-init": "amplify init"
    },
    "dependencies": {
        "@aws-amplify/cli": "latest",
        "aws-amplify": "latest"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@tailwindcss/forms": "^0.3.2",
        "@tailwindcss/typography": "^0.4.1",
        "@wasm-tool/rollup-plugin-rust": "^1.0.6",
        "@wasm-tool/wasm-pack-plugin": "^1.4.0",
        "autoprefixer": "^10.2.6",
        "copy-webpack-plugin": "^9.0.0",
        "cssnano": "^5.0.5",
        "lost": "^8.3.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.0",
        "postcss-cli": "^8.3.1",
        "postcss-csso": "^5.0.1",
        "postcss-import": "^14.0.2",
        "postcss-nested": "^5.0.5",
        "rimraf": "^3.0.2",
        "rollup": "^2.50.5",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-serve": "^1.1.0",
        "tailwindcss": "^2.1.3",
        "tailwindcss-font-inter": "^3.0.0",
        "tailwindcss-rtl": "^0.7.3",
        "wasm-pack": "^0.9.1",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0",
        "webpack-dev-server": "^3.1.5"
    }
}
